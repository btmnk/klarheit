    {
      "packageName": "@klarheit/select",
      "projectFolder": "components/Select",
      "shouldPublish": true
    },
    {
      "packageName": "@klarheit/toggle",
      "projectFolder": "components/Toggle",
      "shouldPublish": true
    },
    {
      "packageName": "@klarheit/scrollbar",
      "projectFolder": "components/Scrollbar",
      "shouldPublish": true
    },
    {
      "packageName": "@klarheit/use-outside-click",
      "projectFolder": "hooks/useOutsideClick",
      "shouldPublish": true
    }
  ]
}
