    },
    {
      "packageName": "@klarheit/storybook",
      "projectFolder": "storybook",
      "shouldPublish": false
    },
    {
      "packageName": "@klarheit/cli",
      "projectFolder": "tools/cli",
      "shouldPublish": true
    },
    {
      "packageName": "@klarheit/bp-webpack-react-spa",
      "projectFolder": "boilerplates/webpack-react-spa",
