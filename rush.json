{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",

  "rushVersion": "5.56.0",
  "pnpmVersion": "6.19.1",

  "pnpmOptions": {},

  "nodeSupportedVersionRange": ">=14.15.0 <15.0.0 || >=16.6.0 <17.0.0",

  "projectFolderMinDepth": 1,

