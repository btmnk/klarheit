/**
 * This is the main configuration file for Rush.
 * For full documentation, please see https://rushjs.io
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",

  "rushVersion": "5.50.0",
  "pnpmVersion": "6.12.0",

  "pnpmOptions": {},

  "nodeSupportedVersionRange": ">=14.15.0 <15.0.0 || >=16.6.0 <17.0.0",

  "projectFolderMinDepth": 1,

  "repository": {
    "url": "https://github.com/btmnk/klarheit",
    "defaultBranch": "main"
  },

  "projects": [
    {
      "packageName": "@klarheit/builder",
      "projectFolder": "tools/builder",
      "shouldPublish": false
    },
    {
      "packageName": "@klarheit/storybook",
      "projectFolder": "storybook",
      "shouldPublish": false
    },
    {
      "packageName": "@klarheit/theme-default",
      "projectFolder": "themes/default",
      "shouldPublish": true
    },
    {
      "packageName": "@klarheit/button",
      "projectFolder": "components/button",
      "shouldPublish": true
    }
  ]
}
